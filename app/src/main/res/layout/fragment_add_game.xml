<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddGameFragment"
    android:orientation="vertical"
    android:background="@color/colorPrimaryLight">



    <ImageButton
        android:layout_marginTop="15dp"
        android:layout_gravity="center_horizontal"
        android:id="@+id/select_game_image"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:src="@drawable/ic_baseline_photo_size_select_actual_24"/>

    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="185dp"
        android:layout_height="60dp"
        android:layout_gravity="center_horizontal">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/name_editText"
            android:layout_width="132dp"
            android:layout_height="30dp"
            android:layout_margin="20dp"
            android:inputType="text"
            android:hint="Enter name game"/>

    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="185dp"
        android:layout_height="60dp"
        android:layout_gravity="center_horizontal">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/genre_editText"
            android:layout_width="132dp"
            android:layout_height="30dp"
            android:layout_margin="20dp"
            android:inputType="text"
            android:hint="Enter game genre"/>

    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:layout_marginTop="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:id="@+id/addGame_button"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:layout_gravity="center_horizontal"
        android:text="Add Game"
        app:cornerRadius="15dp" />

</LinearLayout>
</layout>